# ABOUTME: Example environment configuration for clinical trials pipeline

# AACT Database Configuration
AACT_DB_HOST=aact-db.ctti-clinicaltrials.org
AACT_DB_PORT=5432
AACT_DB_NAME=aact
AACT_DB_USER=your_username
AACT_DB_PASSWORD=your_password

# Anthropic API for LLM Analysis
ANTHROPIC_API_KEY=your_anthropic_api_key

# Perplexity API for external safety signal research
# https://www.perplexity.ai/
PERPLEXITY_API_KEY=your_perplexity_api_key
PERPLEXITY_MODEL=sonar-reasoning

# Optional: Rate Limiting
CHEMBL_DELAY_SECONDS=0.05
PUBMED_DELAY_SECONDS=0.1
PERPLEXITY_DELAY_SECONDS=1.0
